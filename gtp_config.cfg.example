# Basic GTP configuration for KataGo
# Adjust these settings based on your hardware capabilities

# === Search Settings ===
# Number of threads to use for the search
numSearchThreads = 4

# Maximum number of visits during search
maxVisits = 500

# Don't ponder (think during opponent's turn) - better for server usage
ponderingEnabled = false

# === Neural Network Settings ===
# Number of threads per model for neural network evaluation
# Increase for better throughput on multi-core systems
numNNServerThreadsPerModel = 1

# Batch size for neural network evaluation
# Larger = more efficient GPU usage but more memory
nnMaxBatchSize = 16

# For CPU-only operation (no GPU), use these instead:
# numNNServerThreadsPerModel = 2
# nnMaxBatchSize = 8

# === Rules Settings ===
rules = chinese
koRule = POSITIONAL
scoringRule = AREA
taxRule = NONE
multiStoneSuicideLegal = false

# === Analysis Settings ===
# Reduce noise for more consistent analysis
analysisWideRootNoise = 0.0

# Enable various analysis outputs
# These are automatically used by kata-analyze command
reportAnalysisWinratesAs = SIDETOMOVE

# === Performance ===
# Allow slightly worse search quality for faster responses
# Uncomment to make moves faster at cost of strength
# searchFactorAfterOnePass = 0.50
# searchFactorAfterTwoPass = 0.25

# === Logging ===
# Control log level (can be: error, warning, info, debug)
logSearchInfo = false
logMoves = false
logGtp = true
logAllGTPCommunication = false
